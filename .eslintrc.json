{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["off", "double"],
        "no-dupe-args": ["error"],
        "no-empty-class": ["warn"],
        "no-console": ["off"],
        "no-useless-escape": ["off"],
        "no-undef": ["warn"],
        "no-unused-vars": ["warn"],
        "no-mixed-spaces-and-tabs": ["off"],
        "valid-typeof": ["off"]
    }
}